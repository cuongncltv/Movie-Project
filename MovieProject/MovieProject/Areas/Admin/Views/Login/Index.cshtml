@using System.Linq.Expressions
@model MovieProject.Areas.Admin.Models.LoginModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Right - Bootstrap Admin Template</title>
    <link rel="icon" type="image/png" href="/Assets/Admin/img/favicon.png">
    <link rel="apple-touch-icon-precomposed" href="/Assets/Admin/img/apple-touch-favicon.png">
    <link href="/Assets/Admin/libs/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="http://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic" rel="stylesheet" type="text/css">
    <link href="/Assets/Admin/libs/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="/Assets/Admin/libs/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css" rel="stylesheet">
    <link href="/Assets/Admin/css/right.dark.css" rel="stylesheet" class="demo__css">
    <link href="/Assets/Admin/css/demo.css" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<body class="framed">
    <div class="wrapper">
        <div class="login">
            @using (Html.BeginForm("Index","Login", FormMethod.Post, new { @class = "login__form" }))
            {
                @Html.AntiForgeryToken()
                <div class="login__logo"></div>
                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email", @required = true, @autofocus = true })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "Password", @placeholder = "Password", @required = true })
                    </div>
                    <div class="form-group login__action">
                        <div class="checkbox login__remember">
                            <label>
                                @Html.CheckBoxFor(model => model.RememberMe)
                                Remember
                            </label>
                        </div>
                        <div class="login__submit">
                            <button type="submit" class="btn btn-default">Sign in</button>
                        </div>
                    </div>
            }
        </div>
    </div>
    <div class="demo">
        <div class="demo__ico"></div>
        <div class="demo__cont">
            <div class="demo__settings">
                <div class="demo__group">
                    <div class="demo__label">Color theme:</div>
                    <div class="demo__themes">
                        <div data-css="/Assets/Admin/css/right.dark.css" title="Dark" class="demo__theme demo__theme_active demo__theme_dark"></div>
                        <div data-css="/Assets/Admin/css/right.lilac.css" title="Lilac" class="demo__theme demo__theme_lilac"></div>
                        <div data-css="/Assets/Admin/css/right.light.css" title="Light" class="demo__theme demo__theme_light"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/Assets/Admin/libs/jquery/jquery.min.js"></script>
    <script src="/Assets/Admin/libs/bootstrap/js/bootstrap.min.js"></script>
    <script src="/Assets/Admin/js/demo.js"></script>
</body>
</html>